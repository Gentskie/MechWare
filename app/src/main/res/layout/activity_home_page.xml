<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homepage"
    tools:context=".home_page"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    android:id="@+id/parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homepage"
        tools:context=".home_page">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.08"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guideline"
            app:layout_constraintHeight_percent="0.8"
            android:background="@drawable/homepage_bg">

            <!-- Header -->
            <TextView
                android:id="@+id/bold_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="MechWare"
                android:textColor="@color/blue_ish"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <!-- tagline -->
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/blue_ish"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bold_txt"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView7">

                <FrameLayout
                    android:id="@+id/logbook_frame"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="35dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.45"
                    app:layout_constraintHeight_percent="0.35"
                    android:background="@drawable/btn_rounded_corners">

                    <ImageView
                        android:id="@+id/logbook_btn"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView5"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/logs_light" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Logbook"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom|center"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/pitot_frame"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="35dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.45"
                    app:layout_constraintHeight_percent="0.35"
                    android:background="@drawable/btn_rounded_corners">

                    <ImageView
                        android:id="@+id/pitot_btn"
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/pitot_light" />

                    <TextView
                        android:id="@+id/textView12"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pitot Static"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom|center"/>

                </FrameLayout>

                <FrameLayout
                    android:id="@+id/ndt_frame"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/logbook_frame"
                    app:layout_constraintWidth_percent="0.45"
                    app:layout_constraintHeight_percent="0.35"
                    android:background="@drawable/btn_rounded_corners">

                    <ImageView
                        android:id="@+id/ndt_btn"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        android:layout_gravity="center"
                        android:layout_marginBottom="10dp"
                        app:srcCompat="@drawable/testing_light" />

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Non Destructive Testing"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom|center"/>


                </FrameLayout>

                <FrameLayout
                    android:id="@+id/view_frame"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="25dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/pitot_frame"
                    app:layout_constraintWidth_percent="0.45"
                    app:layout_constraintHeight_percent="0.35"
                    android:background="@drawable/btn_rounded_corners">

                    <ImageView
                        android:id="@+id/view_records_btn"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:srcCompat="@drawable/documents"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/view_records_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="View Records"
                        android:textColor="@color/white"
                        android:textSize="15sp"
                        android:layout_marginBottom="10dp"
                        android:layout_gravity="bottom|center"/>
                </FrameLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/back_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#99000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="345dp"
            android:layout_height="254dp"
            app:cardCornerRadius="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Logbook List"

                    android:textColor="@color/blue_ish"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/aircraft_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/maroon"
                    android:text="Aircraft" />

                <Button
                    android:id="@+id/engine_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/maroon"
                    android:text="engine" />

                <Button
                    android:id="@+id/propeller_btn"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/maroon"
                    android:text="Propeller" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <include layout="@layout/navigation_toolbar"/>

</androidx.drawerlayout.widget.DrawerLayout>